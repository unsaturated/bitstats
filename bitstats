#! /usr/bin/env node

/**
 * Entry point for the bitstats program.
 */

const pkg = require('./package.json');
const program = require('commander');

program
  .description(pkg.description)
  .version(pkg.version)
  .command('pr', 'Export pull request data')
  .command('repo', 'Repository listing')
  .command('setup', 'Setup authentication with Bitbucket')
  .parse(process.argv);
